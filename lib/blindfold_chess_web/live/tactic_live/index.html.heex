  </:action>
</.table>

<.modal :if={@live_action in [:new, :edit]} id="tactic-modal" show on_cancel={JS.patch(~p"/tactics")}>
  <.live_component
    module={BlindfoldChessWeb.TacticLive.FormComponent}
    id={@tactic.id || :new}
    title={@page_title}
    action={@live_action}
    tactic={@tactic}
    patch={~p"/tactics"}
  />
</.modal> --%>
