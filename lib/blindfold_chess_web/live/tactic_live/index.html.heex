  <:col :let={{_id, tactic}} label="Moves">{tactic.moves}</:col>
  <:col :let={{_id, tactic}} label="Rating">{tactic.rating}</:col>
  <:col :let={{_id, tactic}} label="Rating deviation">{tactic.rating_deviation}</:col>
  <:col :let={{_id, tactic}} label="Popularity">{tactic.popularity}</:col>
  <:col :let={{_id, tactic}} label="Nb plays">{tactic.nb_plays}</:col>
  <:col :let={{_id, tactic}} label="Themes">{tactic.themes}</:col>
  <:col :let={{_id, tactic}} label="Game url">{tactic.game_url}</:col>
  <:col :let={{_id, tactic}} label="Opening tags">{tactic.opening_tags}</:col>
  <:action :let={{_id, tactic}}>
    <div class="sr-only">
      <.link navigate={~p"/tactics/#{tactic}"}>Show</.link>
    </div>
    <.link patch={~p"/tactics/#{tactic}/edit"}>Edit</.link>
  </:action>
  <:action :let={{id, tactic}}>
    <.link
      phx-click={JS.push("delete", value: %{id: tactic.id}) |> hide("##{id}")}
